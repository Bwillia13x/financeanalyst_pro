# FinanceAnalyst Pro Backend - Production Environment Example
# Copy these values into your production environment (Render/Heroku/Docker secrets).

# Server
NODE_ENV=production
PORT=3001
API_BASE_URL=https://api.financeanalyst.pro

# CORS: Set to your production frontend domain
FRONTEND_URL=https://financeanalyst.pro

# Rate limiting and caching
RATE_LIMIT_REQUESTS=100
CACHE_TTL_MARKET_DATA=900
CACHE_TTL_FINANCIAL_DATA=21600
CACHE_TTL_COMPANY_DATA=86400
RATE_LIMIT_STATEMENTS=30
RATE_LIMIT_ECON_FRED=60
RATE_LIMIT_ECON_META=30
CACHE_TTL_ECONOMIC_DATA=3600
CACHE_TTL_ECONOMIC_META=1800

# API Keys (server-side only)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
FMP_API_KEY=your_fmp_key_here
QUANDL_API_KEY=your_quandl_key_here
FRED_API_KEY=your_fred_key_here

# Security
DEMO_MODE=false
