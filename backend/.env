# FinanceAnalyst Pro Backend - Environment Configuration
# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# CORS Configuration (frontend URL)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# FINANCIAL DATA API KEYS (Server-side only - NOT exposed to client)
# =============================================================================

# Alpha Vantage API (Real-time market data, company overviews)
# Moved from frontend VITE_ALPHA_VANTAGE_API_KEY
ALPHA_VANTAGE_API_KEY=4XI36CCNNXJJ1FBP

# Financial Modeling Prep API (Financial statements, ratios, DCF data)
# Currently using demo - replace with actual key for production
FMP_API_KEY=demo

# Quandl/NASDAQ Data Link API (Economic and financial datasets)
# Currently using demo - replace with actual key for production
QUANDL_API_KEY=demo

# Federal Reserve Economic Data (FRED) API (Economic indicators)
# Currently using demo - replace with actual key for production
FRED_API_KEY=demo

# =============================================================================
# RATE LIMITING AND CACHING
# =============================================================================

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_REQUESTS=100

# Cache TTL in seconds
CACHE_TTL_MARKET_DATA=900      # 15 minutes
CACHE_TTL_FINANCIAL_DATA=21600 # 6 hours
CACHE_TTL_COMPANY_DATA=86400   # 24 hours

# Route-specific rate limits
RATE_LIMIT_STATEMENTS=30       # per-minute limiter for statements routes
RATE_LIMIT_ECON_FRED=60        # per-minute limiter for FRED endpoints
RATE_LIMIT_ECON_META=30        # per-minute limiter for econ metadata endpoints

# Economic data cache TTLs
CACHE_TTL_ECONOMIC_DATA=3600   # 1 hour
CACHE_TTL_ECONOMIC_META=1800   # 30 minutes

# =============================================================================
# SECURITY
# =============================================================================

# Demo mode (set to false when you have valid API keys)
DEMO_MODE=false
