# FinanceAnalyst Pro Backend - Environment Configuration
# Copy this file to .env and add your actual API keys

# Server Configuration
PORT=3001
NODE_ENV=development
API_BASE_URL=http://localhost:3001

# CORS Configuration (frontend URL)
FRONTEND_URL=http://localhost:5173

# =============================================================================
# FINANCIAL DATA API KEYS (Server-side only - NOT exposed to client)
# =============================================================================

# Alpha Vantage API (Real-time market data, company overviews)
# Free tier: 5 requests/minute, 500 requests/day
# Get your key: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here

# Financial Modeling Prep API (Financial statements, ratios, DCF data)
# Free tier: 250 requests/day
# Get your key: https://financialmodelingprep.com/developer/docs
FMP_API_KEY=your_fmp_key_here

# Quandl/NASDAQ Data Link API (Economic and financial datasets)
# Free tier: 50 requests/day
# Get your key: https://data.nasdaq.com/sign-up
QUANDL_API_KEY=your_quandl_key_here

# Federal Reserve Economic Data (FRED) API (Economic indicators)
# Free tier: 120 requests/minute
# Get your key: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_key_here

# =============================================================================
# RATE LIMITING AND CACHING
# =============================================================================

# Rate limiting (requests per 15 minutes per IP)
RATE_LIMIT_REQUESTS=100

# Cache TTL in seconds
CACHE_TTL_MARKET_DATA=900      # 15 minutes
CACHE_TTL_FINANCIAL_DATA=21600 # 6 hours
CACHE_TTL_COMPANY_DATA=86400   # 24 hours

# =============================================================================
# SECURITY
# =============================================================================

# JWT Secret (generate a strong random string)
JWT_SECRET=your_jwt_secret_here

# API key for frontend authentication (optional)
API_KEY=your_api_key_here

# Enable/disable demo mode
DEMO_MODE=false
