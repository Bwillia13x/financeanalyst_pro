// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  name        String?
  password    String
  role        String   @default("analyst")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  scenarios   DCFScenario[]
  exports     Export[]
  chatHistory ChatMessage[]
  
  @@map("users")
}

model DCFScenario {
  id          String   @id @default(cuid())
  name        String
  symbol      String
  userId      String
  
  // DCF Parameters
  assumptions Json     // Store all DCF assumptions as JSON
  results     Json?    // Store computed results as JSON
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("dcf_scenarios")
}

model Export {
  id          String   @id @default(cuid())
  userId      String
  type        String   // "pdf", "csv"
  filename    String
  content     Json     // Store export metadata/content
  
  createdAt   DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("exports")
}

model ChatMessage {
  id          String   @id @default(cuid())
  userId      String
  message     String
  response    String?
  context     Json?    // Store ticker/scenario context
  
  createdAt   DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("chat_messages")
}
